@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<style>


    body {
        background-color: #fff5e1; /* Cor de fundo clara para criar sensação suave */
        font-family: 'Quicksand', sans-serif; /* Fonte para o corpo */
        color: #333;
    }

    h1, h2 {
        font-family: 'Pacifico', cursive; /* Fonte para cabeçalhos */
        color: #ff6f61; /* Coral suave */
    }

    a {
        color: #ff8a00; /* Cor vibrante para links */
        text-decoration: none;
        font-weight: bold;
    }

    header {
        background: url('path/to/your/beach-image.jpg') no-repeat center center;
        background-size: cover;
        padding: 90px;
        color: white;
    }

    footer {
        background-color: #00bcd4; /* Azul tropical */
        color: white;
        text-align: center;
        margin-bottom: 40px
        padding: 30px;
    }

    button {
        background-color: #ff6f61;
        border: none;
        color: white;
        padding: 10px 20px;
        cursor: pointer;
        font-family: 'Lobster', cursive;
    }

        button:hover {
            background-color: #f1c40f;
        }

    .section {
        background-color: #f9f3d7; /* Fundo suave para seções */
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }





    /* Estilo para os campos de entrada */
    .form-floating {
        position: relative;
        margin-bottom: 1.5rem; /* Espaçamento entre os campos */
    }

        .form-floating input {
            font-family: 'Quicksand', sans-serif; /* Fonte suave e amigável */
            font-size: 1rem; /* Tamanho de fonte confortável */
            padding: 10px; /* Espaçamento interno */
            border-radius: 8px; /* Bordas arredondadas */
            border: 2px solid #ff6f61; /* Borda coral suave */
            background-color: #fff5e1; /* Cor de fundo tropical e suave */
            width: 100%; /* Garante que o campo ocupe toda a largura disponível */
            transition: border-color 0.3s ease, box-shadow 0.3s ease; /* Transição suave */
        }

            .form-floating input:focus {
                border-color: #00bcd4; /* Altera a cor da borda ao focar */
                box-shadow: 0 0 5px rgba(0, 188, 212, 0.7); /* Adiciona um brilho suave quando o campo está em foco */
            }

        .form-floating label {
            font-family: 'Quicksand', sans-serif; /* Fonte para o label */
            font-size: 0.9rem; /* Tamanho confortável para o label */
            color: #ff6f61; /* Cor para o texto do label */
            position: absolute;
            top: 50%;
            left: 10px;
            transform: translateY(-50%);
            transition: 0.3s ease; /* Suaviza o movimento ao alterar o foco */
        }

        .form-floating input:focus + label {
            top: -10px;
            font-size: 0.8rem; /* Diminui o tamanho quando o campo é focado */
            color: #00bcd4; /* Altera a cor do label quando o campo está em foco */
        }

    /* Estilo para mensagens de erro */
    .text-danger {
        font-size: 0.85rem;
        color: #ff6347; /* Cor mais intensa para as mensagens de erro */
    }

    /* Estilo para o botão */
    button {
        background-color: #ff6f61; /* Cor de fundo coral suave */
        border: none;
        color: white;
        font-family: 'Quicksand', sans-serif;
        font-size: 1.1rem; /* Tamanho de fonte do botão */
        padding: 12px 20px; /* Espaçamento interno do botão */
        border-radius: 8px; /* Bordas arredondadas */
        width: 100%; /* Botão ocupa toda a largura disponível */
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease; /* Animações suaves */
    }

        button:hover {
            background-color: #ff8a00; /* Cor do botão quando em hover */
            transform: scale(1.05); /* Aumenta o botão um pouco quando o cursor está sobre ele */
        }

        button:focus {
            outline: none; /* Remove o contorno padrão */
            box-shadow: 0 0 5px rgba(0, 188, 212, 0.7); /* Adiciona um brilho suave no botão quando está em foco */
        }

    /* Estilo para o separador <hr> */
    hr {
        border: 0;
        height: 2px;
        background: #00bcd4; /* Cor do separador para combinar com o tema */
        margin: 20px 0;
    }

    /* Estilo para o botão de registro */
    #registerSubmit {
        background-color: #ff6f61; /* Cor de fundo coral suave */
        border: none;
        color: white; /* Cor do texto do botão */
        font-family: 'Quicksand', sans-serif; /* Fonte amigável */
        font-size: 1.2rem; /* Tamanho de fonte confortável */
        padding: 14px 20px; /* Espaçamento interno */
        border-radius: 8px; /* Bordas arredondadas */
        width: 100%; /* Botão ocupa toda a largura disponível */
        cursor: pointer; /* Muda o cursor para indicar que é clicável */
        transition: background-color 0.3s ease, transform 0.2s ease; /* Animação suave para cor de fundo e efeito hover */
    }

        /* Efeito hover para o botão de registro */
        #registerSubmit:hover {
            background-color: #ff8a00; /* Cor do botão quando em hover */
            transform: scale(1.05); /* Aumenta o tamanho do botão ao passar o mouse */
        }

        /* Efeito de foco (quando o botão é clicado) */
        #registerSubmit:focus {
            outline: none; /* Remove o contorno padrão */
            box-shadow: 0 0 5px rgba(0, 188, 212, 0.7); /* Adiciona um brilho suave ao botão quando ele é clicado */
        }



</style>
<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Criar nova conta.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <h3>Use outro email para registrar.</h3>
            <hr />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">article
                            about setting up this ASP.NET application to support logging in via external services</a>.
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}